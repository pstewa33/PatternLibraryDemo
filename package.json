{
  "name": "your-pattern-library",
  "version": "1.0.0",
  "private": true,
  "description": "Pattern library and design system documentation site",
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:eleventy": "eleventy --serve",
    "dev:sass": "sass --watch src/assets/css:dist/assets/css",
    "build": "npm-run-all build:*",
    "build:eleventy": "eleventy",
    "build:sass": "sass src/assets/css:dist/assets/css --no-source-map",
    "build:uswds": "cp -R node_modules/@uswds/uswds/dist/img dist/assets/ && cp -R node_modules/@uswds/uswds/dist/fonts dist/assets/",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@11ty/eleventy": "^2.0.0",
    "@uswds/uswds": "^3.13.0"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.0",
    "sass": "^1.70.0"
  }
}
